<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">

	<import resource="../database/DataSource.xml" />
	<import resource="../database/Hibernate.xml" />

	<bean id="item" class="com.vee.model.Item">
		<property name="itemName" value="Banana" />
		<property name="itemCode" value="B001" />
	</bean>
	
	<bean id="itemDAO" class="com.vee.dao.impl.ItemDAOImpl"/>
	
	<bean id="itemServiceImpl" class="com.vee.services.impl.ItemServiceImpl">
		<property name="dao" ref="itemDAO"/>
	</bean>
	
	<context:component-scan base-package="com.vee"/>
	<context:annotation-config />
</beans>